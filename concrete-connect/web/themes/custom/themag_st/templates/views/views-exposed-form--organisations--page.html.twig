{#
/**
 * @file
 * Theme override for a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
{{ q }}
{% endif %}

{#{{ dpm(form) }}#}

<h6>Search by company name / address</h6>
<div class="form--inline clearfix mb-4">
  {{ form['combine'] }}
</div>

<h6>and / or by product </h6>
<div class="form--inline clearfix mb-4">
  {{ form['dir_organisation_tid'] }}
</div>

<div class="form--inline clearfix mb-4">
  {{ form['actions'] }}
</div>

{{ form|without('actions', 'combine', 'dir_organisation_tid') }}
