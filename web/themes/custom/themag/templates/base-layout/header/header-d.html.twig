{# Header D #}

<div{{ header_top_attribute.addClass(header_top_classes) }}>
  <div class="container">
    <div class="header__top">
      <div class="header__top__left">
        {{ page.logo }}
      </div>
      <div class="header__top__right">
        {{ themag.header_banner|raw }}
      </div>
    </div>
  </div>
</div>

<header{{ header_attribute.addClass(header_classes) }}>
  <div class="header__container-wrapper--header__main js-sticky-header-element">
    <div class="container header__container">
      <div class="header__main">
        <div class="header__main__left">
          <div class="d-lg-none">
            {{ page.logo }}
          </div>
          <div class="d-none d-lg-block">
            {% include '@themag/base-layout/header/components/social-media-pages-menu.html.twig' %}
          </div>
        </div>
        <div class="header__main__middle d-none d-lg-block">
          {{ page.header_primary_menu }}
        </div>
        <div class="header__main_right">
          {% include '@themag/base-layout/header/components/user-action-menu.html.twig' %}
        </div>
      </div>
    </div>
    {{ page.search }}
  </div>

</header>
